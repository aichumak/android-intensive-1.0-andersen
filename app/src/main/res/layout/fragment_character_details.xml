<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/character_details_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toStartOf="@+id/character_details_guideline_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/character_details_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/character_details_guideline_vertical"
        app:layout_constraintTop_toTopOf="@+id/character_details_image" />

    <TextView
        android:id="@+id/character_details_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/character_details_name"
        app:layout_constraintTop_toBottomOf="@+id/character_details_name" />

    <TextView
        android:id="@+id/character_details_species"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/character_details_name"
        app:layout_constraintTop_toBottomOf="@+id/character_details_status" />

    <TextView
        android:id="@+id/character_details_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/character_details_name"
        app:layout_constraintTop_toBottomOf="@+id/character_details_species" />

    <TextView
        android:id="@+id/character_details_gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/character_details_name"
        app:layout_constraintTop_toBottomOf="@+id/character_details_type" />

    <TextView
        android:id="@+id/character_details_origin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/character_details_image"
        app:layout_constraintTop_toBottomOf="@id/character_details_image" />

    <TextView
        android:id="@+id/character_details_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/character_details_image"
        app:layout_constraintTop_toBottomOf="@+id/character_details_origin" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/character_details_guideline_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="150dp" />

    <FrameLayout
        android:id="@+id/character_details_fragment_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/character_details_location">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>